<% if flash.has?(:message) %>
  <%= flash[:message] %>
<% end %>

  <h1>Your Tea</h1>
  <br>
    <h3> <%=@tea.tea_name%> </h3>
    <br>
  <% @tea.types.each do |the_tea| %>
    <p>Type: <%=the_tea.type_name%></p>
    <p>Origin: <%=the_tea.origin%></p>
    <p>Brand: <%=the_tea.brand%></p>
    <p>Leaves: <%=the_tea.leaves%></p>
    <p>Caffeine: <%=the_tea.caffeine%></p>
    <p>Pairings: <%=the_tea.pairing%></p>
    <p>Brew Time: <%=the_tea.brew_time%></p>
    <p>Tasting Notes: <%=the_tea.tasting_notes%></p>
    <p>Comments: <%=the_tea.comments%></p>
  <% end %>
  <p><a href="/users/<%=@user.slug%>/teas/<%=@tea.id%>/edit">edit</a> | <a href="/users/<%=@user.slug%>/teas/<%=@tea.id%>">delete</a> </p>

  <h1>Add a New Tea to your Collection<h1>

  <form method="post" action="/users/<%=@user_id%>/teas">
    <label>Name:</label>
    <input type="text" id="tea_name" name="tea[tea_name]">
    <br>
    <label>Brand:</label>
    <input type="text" id="type_brand" name="tea[type][brand]">
    <br>
    <label>Type:</label>
      <%@types.each do |type|%>
        <% if type.type_name %>
          <input type="checkbox" name="tea[type][][type_name]" value="<%=type.id%>" id="<%=type.id%>"><%=type.type_name%></input>
        <% end %>
      <%end%>
    <br>
    <label>Origin:</label>
      <%@types.each do |type|%>
        <% if type.origin %>
          <input type="checkbox" name="tea[type][][origin]" value="<%=type.id%>" id="<%=type.id%>"><%=type.origin%></input>
        <% end %>
      <%end%>
    <br>
    <label>Leaves:</label>
      <%@types.each do |type|%>
        <input type="checkbox" name="tea[type][][leaves]" value="<%=type.id%>" id="<%=type.id%>"><%=type.leaves%></input>
      <%end%>
    <br>
    <label>Caffeine:</label>
      <%@types.each do |type|%>
        <input type="checkbox" name="tea[type][][caffeine]" value="<%=type.id%>" id="<%=type.id%>"><%=type.caffeine%></input>
      <%end%>
    <br>
    <label>Pairings:</label>
      <%@types.each do |type|%>
        <input type="checkbox" name="tea[type][][pairing]" value="<%=type.id%>" id="<%=type.id%>"><%=type.pairing%></input>
      <%end%>
    <br>
    <label>Brew Time:</label>
      <%@types.each do |type|%>
        <input type="checkbox" name="tea[type][][brew_time]" value="<%=type.id%>" id="<%=type.id%>"><%=type.brew_time%></input>
      <%end%>
    <br>
    <label>Tasting Notes:</label>
    <input type="textarea" name="tasting_notes">
    <br>
    <label>Comments:</label>
    <input type="textarea" name="comments">
    <br>
    <input type="submit" value="Add to Crate">

</form>

  <h1>Add a New Tea to your Collection<h1>

  <form method="post" action="/users/<%=@user_id%>/teas">
    <label>Name:</label>
    <input type="text" id="tea_name" name="tea[tea_name]">
    <br>
    <label>Brand:</label>
    <input type="text" name="brand">
    <br>
    <label>Type:</label>
      <%@types.each do |type|%>
        <input type="checkbox" name="tea[type_name]" value="<%=type.id%>" id="<%=type.id%>"><%=type.name%></input>
      <%end%>
    <br>
    <label>Origin:</label>
      <%@types.each do |type|%>
        <input type="checkbox" name="tea[origin][]" value="<%=type.id%>" id="<%=type.id%>"><%=type.origin%></input>
      <%end%>
    <br>
    <label>Leaves:</label>
      <%@types.each do |type|%>
        <input type="checkbox" name="tea[leaves][]" value="<%=type.id%>" id="<%=type.id%>"><%=type.leaves%></input>
      <%end%>
    <br>
    <label>Caffeine:</label>
      <%@types.each do |type|%>
        <input type="checkbox" name="tea[caffeine][]" value="<%=type.id%>" id="<%=type.id%>"><%=type.caffiene%></input>
      <%end%>
    <br>
    <label>Pairings:</label>
      <%@types.each do |type|%>
        <input type="checkbox" name="tea[pairings][]" value="<%=type.id%>" id="<%=type.id%>"><%=type.pairings%></input>
      <%end%>
    <br>
    <label>Brew Time:</label>
      <%@types.each do |type|%>
        <input type="checkbox" name="tea[brew_time][]" value="<%=type.id%>" id="<%=type.id%>"><%=type.brew_time%></input>
      <%end%>
    <br>
    <label>Tasting Notes:</label>
    <input type="text" name="tasting_notes">
    <br>
    <label>Comments:</label>
    <input type="text" name="comments">
    <br>
    <input type="submit" value="Add to Crate">

</form>
